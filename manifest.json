{
  "manifest_version": 3,
  "name": "Ecosia Tree Counter",
  "version": "1.0",
  "description": "Displays the average number of trees planted by Ecosia based on your search count.",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "*://www.ecosia.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.ecosia.org/*"],
      "js": [
        "scripts/dom.js",
        "scripts/counter.js",
        "scripts/style.js",
        "scripts/content.js"
      ],
      "css": [
        "styles/general.css",
        "styles/light-mode.css",
        "styles/dark-mode.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
